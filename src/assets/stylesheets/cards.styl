.single-card
    display: inline-block
    padding: 10px 7px 5px
    width: 200px
    position: relative
    background-color: no-alpha($cfe-game-primary)
    border-radius: 15px
    border: $e-border-primary
    color: $cfe-game-contrast
    z-index: 1
    &.active-card
        z-index: 2
    .card-upper,
    .card-lower
        position: relative
    .card-lower
        background-color: $cfe-game-primary
        margin-top: -70px
        z-index: 3
    .card-icons
        margin-top: -5px
        height: 50px
        position: relative
        .card-icon
            position: relative
            z-index: 4
            // color: no-alpha($cfe-game-primary)
            // background-color: $cfe-game-contrast
            border: $e-border-contrast
            border-radius: 50%
            display: inline-block
            height: 25px
            width: 25px
            padding-top: 2px
            float:left
            clear:left
            text-align: center
            &.icon-team
                color: black
                border-color: black
                background-color: orange
            &.icon-ammo
                color: yellow
                border-color: yellow
                background-color: purple
            &.icon-circuit
                color: yellow
                border-color: yellow
                background-color: green
            &.icon-blocker
                color: red
                border-color: red
                background-color: blue

    .name
        font-size: 0.84rem
        font-weight: 500
    .number
        font-size: 1.0rem
        padding: 4% 5% 4% 4%
        border-radius: 50%
        border: $e-border-primary
        color: $cfe-game-contrast
        margin: 0
        text-align: center
        position: absolute
        z-index: 5
        right: 0
        font-weight: 900
    .card-image
        clear: both
        top: -30px
        position: relative
        // border-radius: 36% 48% 2% 2%
        // box-shadow: inset 0px 6px 4px orange, inset 0px -16px 4px orange
        z-index: 2
        img
            height: 180px
            min-height: 100px
            width: 100%
            border-radius: 31% 31% 2% 2%
        &:after
            content: ''
            display: block
            position: absolute
            border-radius: 31% 31% 2% 2%
            top: -1px
            width: 100%
            height: 101%
            box-shadow: inset 0px 6px 4px no-alpha($cfe-game-primary), inset 0px -16px 4px no-alpha($cfe-game-primary)

    .card-effects
        background-color: $cfe-game-primary
        border: $e-border-thin
        margin-bottom: 10px
        font-size: 0.8rem
        padding: 3px
        &.main-text
            min-height: 3.0rem
        p
            padding: 0
            margin: 0
            margin-top: 3px
            font-size: 0.7rem
            &:first-child
                margin-top: 0
            &.clash-title
                float: right
                font-weight: 900
                margin: -10px 0 0
                padding: 0 5px
                position: relative
                z-index: 4
                background-color: $cfe-game-primary
                color: white
            &.clash-text
                clear: right
                text-align: right
                // background-color: no-alpha($cfe-game-primary)
                color: $cfe-game-accent
                font-size: 0.7rem
                min-height: 0.75rem

